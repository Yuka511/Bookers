<h1>Books</h1>
<p class ="table">Title</p>
<% @books.each do |book| %>
  <span><%= book.title %></span>
<% end %>

<p class ="table">Body</p>
<% @books.each do |book| %>
  <span><%= book.body %></span>
<% end %>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td>
      <%= link_to "Show", book_path(book) %>
      <%= link_to "Edit", edit_book_path(book) %>
      <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
  </tr>
<% end %>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>